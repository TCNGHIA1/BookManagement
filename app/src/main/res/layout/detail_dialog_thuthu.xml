<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin thủ thư" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <TextView
                style="@style/detail_dialog_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã thủ thư / Tài khoản" />

            <TextView
                android:id="@+id/tvId"
                style="@style/detail_dialog_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                style="@style/detail_dialog_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên thủ thư" />

            <TextView
                android:id="@+id/tvTen"
                style="@style/detail_dialog_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                style="@style/detail_dialog_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu" />

            <TextView
                android:id="@+id/tvMatkhau"
                style="@style/detail_dialog_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                style="@style/detail_dialog_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại" />

            <TextView
                android:id="@+id/tvLs"
                style="@style/detail_dialog_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                style="@style/detail_dialog_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quyền hạn" />

            <TextView
                android:id="@+id/tvRole"
                style="@style/detail_dialog_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>